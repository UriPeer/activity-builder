{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python_MyApplication",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "application.py",
        "FLASK_ENV": "development"
      },
      "justMyCode": true,
      "args": ["run", "--no-debugger"],
      "python": "{Your project path}/server/.venv/Scripts/python.exe",
      "cwd": "{Your project path}/server"
    }
  ]
}